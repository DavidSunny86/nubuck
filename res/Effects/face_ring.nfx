// face ring, move diffuse texture
fx FaceRing {
  pass FaceRing {
    // TODO: flags = USE_TEX_DIFFUSE | USE_TIME | USE_MATERIAL
    state.blend {
      enabled   = GL_TRUE;
      srcFactor = GL_SRC_ALPHA;
      dstFactor = GL_ONE_MINUS_SRC_ALPHA;
    }
    vs = "#include <Shaders\facering.vert>";
    fs = "#include <Shaders\facering.frag>";
  }
}
